{
	"include": [
		"src",
		"test",
		"*.config.*"
	],
	"exclude": [
		"node_modules",
		"dist"
	],

	"compilerOptions": {
		// Paths
		"baseUrl": ".",
		"paths": {
			"@exists/*": [ "src/*" ],
			"@test/*": [ "test/*" ]
		},

		// Language features
		"lib": [ "ESNext" ],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"moduleDetection": "force",
		"allowJs": true,
		"esModuleInterop": true,

		// Building
		"outDir": "dist",
		"declaration": true,

		// Error checking
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false
	}
}
